            <Button x:Name="btn_up" FontFamily="Marlett" FontSize="40" Content="5" Width="50" Height="50" Margin="352,111,106,193"/>
            <Button x:Name="btn_down" FontFamily="Marlett" FontSize="40" Content="6" Width="50" Height="50" Margin="352,161,106,143"/>
            <Button x:Name="btn_right" FontFamily="Marlett" FontSize="40" Content="4" Width="50" Height="50" Margin="402,161,56,143"/>
