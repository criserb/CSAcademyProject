<Page x:Class="ProjectAcademy.Option"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectAcademy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="Option">

    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="550" Source="/ProjectAcademy;component/Graphics/Plane_Background.png"/>
        <Button x:Name="Btn_Back" Content="Back" HorizontalAlignment="Left" Margin="10,369,0,0" VerticalAlignment="Top" Width="125" Height="40" Click="Btn_Back_Click" Visibility="Visible"/>
        <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="135,369,0,0" VerticalAlignment="Top" Width="125" Height="40" Click="btn_save_Click"/>
        <Grid x:Name="optionGrid" Panel.ZIndex="10"  Margin="10,10,27,86">
            <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.3"/>
                </Grid.Background>
                <Ellipse x:Name="myEllipse" Fill="Black" HorizontalAlignment="Left" Height="25" Margin="46,53,0,0" VerticalAlignment="Top" Width="25"/>
            <Button x:Name="Btn_change_avatar_color" Content="Change color" HorizontalAlignment="Left" Margin="126,45,0,0" VerticalAlignment="Top" Width="148" Click="Btn_change_player_color_Click"/>
            <Button x:Name="Btn_change_line_color" Content="Change line color" HorizontalAlignment="Left" Margin="126,141,0,0" VerticalAlignment="Top" Width="148" Click="Btn_change_line_color_Click"/>
            <Rectangle x:Name="myRectangle" HorizontalAlignment="Left" Height="25" Margin="46,149,0,0" Stroke="Black" VerticalAlignment="Top" Width="25" StrokeThickness="2"/>
            <Rectangle x:Name="myRectangleBackground" HorizontalAlignment="Left" Height="25" Margin="46,256,0,0" VerticalAlignment="Top" Width="25" StrokeThickness="2" Fill="#FFF5C4C4"/>
            <Button x:Name="Btn_change_background_color" Content="Change background color" HorizontalAlignment="Left" Margin="126,247,0,0" VerticalAlignment="Top" Width="148" Click="Btn_change_background_color_Click" />
            <Button x:Name="btn_default_avatar_color" Content="Restore default" HorizontalAlignment="Left" Margin="126,65,0,0" VerticalAlignment="Top" Width="148" Click="btn_default_avatar_color_Click"/>
            <Button x:Name="btn_default_line_color" Content="Restore default"  HorizontalAlignment="Left" Margin="126,161,0,0" VerticalAlignment="Top" Width="148" Click="btn_default_line_color_Click"/>
            <Button x:Name="btn_default_background_color" Content="Restore default" HorizontalAlignment="Left" Margin="126,267,0,0" VerticalAlignment="Top" Width="148" Click="btn_default_background_color_Click"/>
        </Grid>
        <Grid x:Name="previewGrid" Panel.ZIndex="10" Margin="298,75,50,173" Width="202" Height="202" Background="White"/>
    </Grid>
</Page>
