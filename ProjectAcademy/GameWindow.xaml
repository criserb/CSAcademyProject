<Window x:Name="MazeWindow" x:Class="ProjectAcademy.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAcademy"
        mc:Ignorable="d"
       Title="MiniMaze" Height="350" Width="350"
        KeyDown="OnKeyDownHandler" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="gameGrid">
        <Image x:Name="image" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="344" Source="Background.png"/>
        <Button x:Name="Btn_Back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Click="Btn_Back_Click" Margin="43,280,0,0" Height="20" VerticalContentAlignment="Center" RenderTransformOrigin="2.08,0.6"/>
        <Button x:Name="Btn_Show_Solution" Content="?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="18,280,0,0" Click="Btn_Show_Solution_Click" Height="20" VerticalContentAlignment="Center" />
        <Button x:Name="Btn_labels" Content="Button" HorizontalAlignment="Left" Margin="205,280,0,0" VerticalAlignment="Top" Width="120"/>
        <Grid x:Name="mazeGrid" Margin="18,18,19,41"/>
    </Grid>
</Window>
