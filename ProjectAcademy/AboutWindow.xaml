<Window x:Class="ProjectAcademy.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAcademy"
        mc:Ignorable="d"
        Title="About Maze" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Width="500" Height="250">
    <Grid>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="494" VerticalAlignment="Top" Width="494" Margin="0,0,0,-273" Source="Graphics/Plane_background.png"/>
        <Button x:Name="btn_close" Content="Close" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top" Width="75" Click="btn_close_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Source="Graphics/Icon.png"/>
        <TextBox x:Name="aboutText" Margin="165,10,20,50" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
    </Grid>
</Window>
